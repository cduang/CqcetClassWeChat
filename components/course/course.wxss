/* courseItem.wxss */

.course-wrapper {
  display: felx;
  flex-direction: column;
  
  width: 100%;
  height: 160rpx;
  color: white;
}

.show-course {
  display: flex;
  height: 50%;
  justify-content: space-around;
  align-items: center;
}
.start-time {
  font-size: 30rpx;
}
.title {
  font-size: 40rpx;
}

.hide-course {
  display: flex;
  height: 50%;
  width: 100%;
  justify-content: space-around;
  align-items: center;
}

/* hide */
.edit-btn {
  font-size: 25rpx;
  padding: 3px 10px 2px 10px;
  border: solid 1px white;
  border-radius: 5px;
}
.time-range {
  line-height: 70rpx;
  height: 70rpx;
  width: 300rpx;
}
.teacher {
  line-height: 70rpx;
  height: 70rpx;
  width: 100px;
}

