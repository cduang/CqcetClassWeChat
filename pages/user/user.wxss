/* pages/user/user.wxss */
Page {
  background-color: #F2F3F4;
}

.user-image {
  margin-top: 100rpx;
  height: 200rpx;
  width: 100%;
  border: solid 1px blue;
  background-color: white;
}

.option-warp {
  position: absolute;
  bottom: 0;
  width: 100%;
  height: 60%;
}
.option-item-group {
  margin-top: 40rpx;
}
.option-item {
  height: 100rpx;
  width: 100%;
  text-align: center;
  line-height: 100rpx;
  background-color: white;
  border-top: solid 1rpx #F2F3F4;
  border-bottom: solid 1rpx #F2F3F4;
  color: #34495E;
}
.quit {
  margin-top: 70rpx;
  color: white;
  background-color: #EC7063;
  border: 0;
}